<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirestoreActivity">
    <TextView
            android:text="Quote"
            android:layout_width="377dp"
            android:layout_height="57dp"
            android:id="@+id/tvQuote" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="56dp" app:layout_constraintTop_toTopOf="parent"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:inputType="textPersonName"
            android:text=" "
            android:ems="10"
            android:id="@+id/etQuote"
            android:hint="Enter the Quote" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tvQuote" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:text=" "
            android:ems="10"
            android:id="@+id/edtAuthor" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/etQuote" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Enter the Author"/>
    <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/edtAuthor" app:layout_constraintEnd_toStartOf="@+id/btnFetch"
            android:layout_marginEnd="56dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Fetch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFetch" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="28dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/edtAuthor"/>
</android.support.constraint.ConstraintLayout>